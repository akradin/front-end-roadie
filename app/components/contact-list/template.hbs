<form {{action 'createContact' on='submit'}}>
{{input placeholder="Name (required)" value=Contact.name}}
{{input placeholder="Phone Number - 1234567890" value=Contact.phone_number}}
{{input placeholder="email" value=Contact.email}}
{{input placeholder="company" value=Contact.company}}
{{input placeholder="details" value=Contact.details}}
<button>Add Contact</button>
</form>


{{#each contact as |contact|}}
  <div class="contact-item" {{action 'toggleComplete' on='click'}}>{{contact.name}}</div>
  {{contact-list/edit contact=contact
                      delete='deleteContact'
                      edit='editContact'}}
{{/each}}
