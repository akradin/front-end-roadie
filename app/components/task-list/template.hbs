<form {{action 'createTask' on='submit'}}>
{{input placeholder="Name (required)" value=Task.name}}
{{input placeholder="Due Date (required, YYYY-MM-DD)" value=Task.due_date}}
{{input placeholder="priority level (required, maximum of 9)" value=Task.priority}}
{{input placeholder="details" value=Task.details}}
<button class="add-item">Add Task</button>
</form>


{{#each task as |task|}}
  <div class="task-item" {{action 'toggleComplete' on='click'}}>{{task.name}}</div>
  {{task-list/edit task=task
                    delete='deleteTask'
                    edit='editTask'
                  complete='completeTask'}}
{{/each}}
{{yield}}
