<form class="create-task" {{action 'createTask' on='submit'}}>
<div class="task-form">{{input placeholder="Name (required)" value=Task.name}}</div>
<div class="task-form">{{input placeholder="Due Date (required, YYYY-MM-DD)" value=Task.due_date}}</div>
<div class="task-form">{{input placeholder="priority level (required, maximum of 9)" value=Task.priority}}</div>
<div class="task-form">{{input  placeholder="details" value=Task.details}}</div>
<button class="add-item">Add Task</button>
</form>


{{#each task as |task|}}
  <div class="task-item" {{action 'toggleComplete' on='click'}}>{{task.name}}</div>
  {{task-list/edit task=task
                    delete='deleteTask'
                    edit='editTask'
                  complete='completeTask'}}
{{/each}}
{{yield}}
